<div class="container mt-2">
  <h3>会員情報変更</h3>
  
  <% if @customer.errors.any? %>
    <%= @customer.errors.count %>件のエラーが発生しました
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </ul>
  <% end %>

    <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td>
            <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
            <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>
            <%= f.text_field :first_name_kana, autofocus: true, id:"inputName" %>
          </td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, autofocus: true %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number, autofocus: true %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email, autofocus: true %></td>
        </tr>
        <tr>
          <th>自治体名</th>
          <td><%= f.text_field :municipality_name, autofocus: true %></td>
        </tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効" %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "退会" %>
          </td>
        </tr>
      </table>
      <%= f.submit "変更を確定", class: "btn btn-success" %>
    <% end %>
</div>