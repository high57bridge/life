<h2><%= @customer.last_name %><%= @customer.first_name %>さんの詳細</h2>

<table class="table">
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th>自治体名</th>
    <td><%= @customer.municipality_name %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <% if @customer.is_active %>
        <div class="text-success">有効</div>
      <% else %>
        <div class="text-secondary">退会</div>
      <% end %>
    </td>
  </tr>
</table>

<%= link_to "会員情報変更", edit_admin_customer_path %>
<%= link_to "会員削除", admin_customer_path(@customer), method: :delete, "data-confirm" => "本当に削除しますか？" %>