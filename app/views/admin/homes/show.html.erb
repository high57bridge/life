<div class="container mt-2">
  <div class="row">
    <h3>問い合わせ詳細ページ</h3>

      <table class="table">
        <tr>
          <th>氏名</th>
          <td><%= @home.name %></td>
        </tr>
        
        <tr>
          <th>メールアドレス</th>
          <td><%= @home.email %></td>
        </tr>
        
        <tr>
          <th>ご意見・ご質問</th>
          <td><%= @home.opinion %></td>
        </tr>
        
        <tr>
          <th>受信日</th>
          <td><%= @home.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>確認ステータス</th>
          <td>
            <%= form_with model: @home, url: admin_home_path, method: :patch do |f| %>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "未確認" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "確認済" %>
              <%= f.submit "ステータスを変更", class: "btn  btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>
  </div>
</div>
