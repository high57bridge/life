<div class="container mt-2">
    <div class="row">
        <div class="col-md-8">
            <h3>お知らせ詳細画面</h3>
                <table class="table">
                    <tr>
                        <th>避難場所の画像・地図</th>
                        <td>
                            <% if @post.image.present? %>
                                <%= image_tag @post.image, size: "250x200" %>
                            <% end %>
                        </td>
                    </tr>
                    <tr>
                        <th>避難場所</th>
                        <td><%= @post.name %></td>
                    </tr>
                    <tr>
                        <th>避難場所に関しての説明</th>
                        <td><%= @post.introduction %></td>
                    </tr>
                    <tr>
                        <th>避難場所の住所</th>
                        <td><%= @post.address %></td>
                    </tr>
                    <tr>
                        <th>更新日</th>
                        <td><%= @post.updated_at.strftime('%Y/%m/%d') %></td>
                    </tr>
                </table>
                
    <div class="mt-2">
        <%= link_to "投稿を編集する", edit_admin_post_path, class: 'btn btn-success' %>
        <%= link_to "投稿を削除する", admin_post_path, method: :delete, "data-confirm" => "本当に削除しますか", class: 'btn btn-danger' %>
    </div>

<!--コメント表示-->
コメント件数：<%= @post.comments.count %>
    <% @post.comments.each do |c| %>
        <div style="width:55%" class="border-info border rounded">
            <p class="font-weight-bold">  <!--投稿者のIDと名前-->
                [<%= c.customer.id %>]<%= c.customer.last_name %><%= c.customer.first_name %>
            </p>
                <%= simple_format(c.comment) %>   <!--改行ありで表示-->
                <%= c.created_at.strftime('%Y/%m/%d %H:%M') %>  <!--投稿日時-->
                <!--コメント削除には、@post（親）, @commentsのc に渡す必要がある-->
                <%= link_to admin_post_comment_path(@post, c), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'text-danger' do %>
                    <i class="fa-solid fa-trash"></i> 削除
                <% end %>
        </div>
    <% end %>
        </div>
    </div>
</div>