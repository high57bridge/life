<h2>お知らせ詳細画面</h2>
    <table class="table">
        <tr>
            <th>避難場所の画像・地図</th>
            <td>
                <% if @post.image.present? %>
                    <%= image_tag @post.image, size: "250x200" %>
                <% end %>
            </td>
        </tr>
        <tr>
            <th>避難場所</th>
            <td><%= @post.name %></td>
        </tr>
        <tr>
            <th>避難場所に関しての説明</th>
            <td><%= @post.introduction %></td>
        </tr>
        <tr>
            <th>避難場所の住所</th>
            <td><%= @post.address %></td>
        </tr>
        <tr>
            <th>更新日</th>
            <td><%= @post.updated_at.strftime('%Y/%m/%d') %></td>
        </tr>
    </table>

    <!--コメント表示-->

    コメント件数：<%= @post.comments.count %>
    <% @post.comments.each do |comment| %>
        ユーザーネーム：<%= comment.customer.last_name %><%= comment.customer.first_name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
        <%= link_to "削除", public_post_comment_path(@post, comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <% end %>

    <%= link_to "編集する", edit_admin_post_path %>
    <%= link_to "削除する", admin_post_path, method: :delete, "data-confirm" => "本当に削除しますか" %>
    <%= link_to "戻る", admin_posts_path %>