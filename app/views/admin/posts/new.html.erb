<div class="container mt-2">
  <div class="row">
     <div class="col-md-8">
        <h3>新規投稿</h3>
    
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @post, url: admin_posts_path do |f| %>
        <table class="table">
            <tr>
              <th><%= f.label :避難場所の画像 %></th>
              <td><%= f.file_field :image, accept: "image*/" %></td>
            </tr>
            
            <tr>
              <th><%= f.label :避難場所 %></th>
              <td><%= f.text_field :name %></td>
            </tr>
            
            <tr>
              <th><%= f.label :説明 %></th>
              <td><%= f.text_area :introduction, size: "30x5" %></td>
            </tr>
          
            <tr>
              <th><%= f.label :住所 %></th>
              <td><%= f.text_field :address %></td>
            </tr>
          </table>
          <%= f.submit "投稿", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>