<h2>お知らせ投稿一覧</h2>

<%= link_to new_admin_post_path, class: 'text-dark' do %>
  <i class="fas fa-plus"></i>
<% end %>

<% @posts.each do |post| %>
  <table class="table">
    <thead>
      <tr>
        <th>避難場所の画像・地図</th>
        <th>避難場所</th>
        <th>避難場所に関しての説明</th>
        <th>避難場所の住所</th>
        <th>登録日</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>
          <% if post.image.present? %>
            <%= link_to admin_post_path(post) do %>
              <%= image_tag post.image, size: "250x200" %>
            <% end %>
          <% end %>
        </td>
        <td><%= post.name %></td>
        <td><%= post.introduction %></td>
        <td><%= post.address %></td>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
    </tbody>
  </table>
<% end %>
