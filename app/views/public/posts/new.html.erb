<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <h3>新着のお知らせ</h3>
    </div>
  </div>

<!--既読・未読の判断をわかりやすくするためのもの-->
  <% @posts.each do |post| %>
    <div style="width:35%" class="border-secondary border rounded m-1">
      <% read = post.reads.where(customer_id:current_customer.id).present? %>
        <h4 class="text-white <%= read ? 'bg-secondary' : 'bg-warning' %>" style="width:20%">
          <p><%= read ? '既読' : '未読' %></p>
        </h4>
        
        <div class="d-flex justify-center flex-wrap">
          <div class="font-weight-bold">避難場所：</div>
          <div><%= post.name %></div>
        </div>
    
        <div class="d-flex justify-center flex-wrap">
          <div class="font-weight-bold">説明：</div>
          <div><%= post.introduction %></div>
        </div>
    
        <div class="d-flex justify-center flex-wrap">
          <div class="font-weight-bold">住所：</div>
          <div><%= post.address %></div>
        </div>
    
        <div class="d-flex justify-center flex-wrap">
          <div class="font-weight-bold">登録日：</div>
          <div><%= post.created_at.strftime('%Y/%m/%d') %></div>
          <%= link_to "開く", public_post_path(post), class: 'btn btn-sm btn-info mb-1 ml-5' %>
        </div>
    </div>
  <% end %>
  <%= paginate @posts %>
</div>



