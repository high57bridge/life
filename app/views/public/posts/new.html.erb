<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <h3>新着のお知らせ</h3>
    </div>
  </div>

<% @posts.each do |post| %>
  <div style="width:40%" class="border-info border rounded m-1">
    <h4 class="text-white bg-info" style="width:20%">
      <%= post.reads.where(customer_id:current_customer.id).present? ? '既読' : '未読' %>
    </h4>
    <%= link_to public_post_path(post), class: 'text-dark' do %>
      <div class="d-flex justify-center flex-wrap">
        <div class="font-weight-bold">避難場所：</div>
        <div><%= post.name %></div>
      </div>
  
      <div class="d-flex justify-center flex-wrap">
        <div class="font-weight-bold">説明：</div>
        <div><%= post.introduction %></div>
      </div>
  
      <div class="d-flex justify-center flex-wrap">
        <div class="font-weight-bold">住所：</div>
        <div><%= post.address %></div>
      </div>
  
      <div class="d-flex justify-center flex-wrap">
        <div class="font-weight-bold">登録日：</div>
        <div><%= post.created_at.strftime('%Y/%m/%d') %></div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>



