<div class="container mt-2">
  <div class="row">
    <div class="col-md-12">
      <h3>会員情報の変更</h3>
      
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </ul>
      <% end %>
      
      <%= form_with model: @customer, url: information_public_customers_path do |f| %>
          <table style="width:70%" >
            <tr>
              <th class="table-secondary"><%= f.label :氏名 %></th>
              <td>
                <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
                <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
              </td>
            </tr>
            
            <tr>
              <th><%= f.label :フリガナ %></th>
              <td>
                <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>
                <%= f.text_field :first_name_kana, autofocus: true, id:"inputName" %>
              </td>
            </tr>
            
            <tr>
              <th class="table-secondary"><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code, autofocus: true %></td>
            </tr>
            
            <tr>
              <th><%= f.label :住所 %></th>
              <td><%= f.text_field :address, autofocus: true %></td>
            </tr>
            
            <tr>
              <th class="table-secondary"><%= f.label :電話番号 %></th>
              <td><%= f.text_field :telephone_number, autofocus: true %></td>
            </tr>
            
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            
            <tr>
              <th class="table-secondary"><%= f.label :自治体 %></th>
              <td><%= f.text_field :municipality_name, autofocus: true %></td>
            </tr>
          </table>
    </div>
          <div class="col-md-5 mt-2">
            <%= f.submit "変更を保存", class: 'btn btn-success' %>
            <%= link_to "退会する", withdrawal_public_customers_path, class: 'btn btn-danger' %>
           </div>
      <% end %>
  </div>
</div>