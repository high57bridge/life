<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <h3>マイページ</h3>
        <table class="table">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>〒<%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>自治体名</td>
            <td><%= @customer.municipality_name %></td>
          </tr>
        </table>
      <%= link_to "編集する", information_edit_public_customers_path, class: 'btn btn-success' %>

      <h4><i class="fa-solid fa-bookmark mt-2"></i>いいね（ブックマーク）一覧</h4>
        <table class="table">
          <thead>
            <tr>
              <th>避難場所</th>
              <th>説明</th>
              <th>住所</th>
            </tr>
          </thead>

          <tbody>
            <% @likes.each do |like| %>
              <tr>
                <td>
                  <%= link_to public_post_path(like.post) do %>
                    <%= like.post.name %>
                  <% end %>
                </td>
                <td><%= like.post.introduction %></td>
                <td><%= like.post.address %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

  <%= link_to "寄付履歴", public_donations_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>